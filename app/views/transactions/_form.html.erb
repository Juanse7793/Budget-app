<% end %>


<div class="actions_expense">
  <% if @transaction.id != nil && current_page?(edit_group_transaction_path(@group, @transaction)) %>
    <%= button_to "Delete transaction", group_transaction_path(@group, @transaction), method: :delete, class: "app_button red_button" %>
  <% end %>
</div>